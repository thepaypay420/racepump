modules = ["nodejs-20", "web", "postgresql-16", "python-3.11", "python3"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["imagemagick", "openssl", "sqlite", "solana-cli", "rustc", "cargo", "pkg-config"]

[deployment]
deploymentTarget = "gce"
build = ["npm", "run", "build"]
run = ["sh", "-c", "npm run start"]

# CRITICAL: Explicitly disable Replit's automatic database migration detection
# We handle ALL database migrations in the application code itself.
# Migrations are in: sql-scripts/ directory
# Migration runner: scripts/sql-migrations.ts (runs at app startup)
[deployment.databaseMigrations]
enabled = false

[env]
PORT = "5000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
